{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "slack-reminder",
  "title": "Slack Reminder",
  "description": "",
  "icon": "extension-icon.png",
  "author": "Morloka",
  "platforms": [
    "macOS"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "add-slack-reminder",
      "title": "Add Slack Reminder",
      "description": "",
      "mode": "view",
      "preferences": [
        {
          "name": "devMode",
          "type": "checkbox",
          "required": false,
          "title": "Developer Mode",
          "description": "Show developer-mode toasts and behaviors",
          "default": true
        },
        {
          "name": "defaultTime",
          "type": "textfield",
          "required": false,
          "title": "Default Time (HH:MM)",
          "description": "Used if no time is provided in the picker",
          "placeholder": "11:00",
          "default": "11:00"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.2",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "npx @raycast/api@latest build",
    "dev": "npx @raycast/api@latest develop",
    "fix-lint": "npx @raycast/api@latest lint --fix",
    "lint": "npx @raycast/api@latest lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}